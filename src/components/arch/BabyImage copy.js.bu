import React from 'react';

function BabyImage(props) {
	
	var path =  'src/img/';
	var file =  (props.gender) ? 'baby_' + props.gender + '.png' : null;
	
	const style = {
		element : {
			verticalAlign: "middle",
			width: "33%",
			textAlign: "center"
		},
		img : {
			width: Math.floor(props.ounces / 224 * 130).toString() + 'px'
		}
	}
	
	return (
		<td style={style.element}>
		{file &&
			<img src={path + file} style={style.img} />
		}
		</td>
	)

}

export default BabyImage;